#include<iostream.h>
#include<conio.h>
#include<string.h>

class Employee
{
  public:
  int id;
  char name[12];
  float salary;

  void insert(int i , char n[], float s)
  {
    id = i;
    strcpy(name,n);
    salary = s;
  }
  void display()
  {
   cout <<id<<" "<<name<<" "<<salary<<endl;
  }
 };
 int main()
 {
  clrscr();
  Employee e1;
  e1.insert(12,"Varsha",5373.99);
  e1.display();
  getch();
  return 0;
 }

